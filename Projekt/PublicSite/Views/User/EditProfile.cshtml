@using DAL.Model

@model PublicSite.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Uređivanje profila";
    var Spolovi = ViewBag.Spolovi as List<Spol>;
    var RazineFizickeAktivnosti = ViewBag.RazineFizickeAktivnosti as List<RazinaFizickeAktivnosti>;
    var TipoviDijabetesa = ViewBag.TipoviDijabetesa as List<TipDijabetesa>;
}

<h2>Uređivanje osobnih podataka</h2>
<br />
<hr />
<br />


<div class="outer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal inner">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.IDKorisnik)
            @Html.HiddenFor(model => model.Email)

            <div>
                @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.Prezime, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.DisplayFor(model => model.Email, new { @readonly = true, htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.Lozinka, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.PotvrdiLozinku, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.PasswordFor(model => model.PotvrdiLozinku, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PotvrdiLozinku, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <br />

            <div>
                @Html.LabelFor(model => model.Visina, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.EditorFor(model => model.Visina, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Visina, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.Tezina, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.EditorFor(model => model.Tezina, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tezina, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.DatumRodjenja, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @Html.EditorFor(model => model.DatumRodjenja, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DatumRodjenja, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.SpolID, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @*@Html.EditorFor(model => model.SpolID, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.SpolID, selectList: new SelectList(items: Spolovi, dataValueField: "IDSpol", dataTextField: "Naziv"), htmlAttributes: new { @class = "form-control dropdown" })
                    @Html.ValidationMessageFor(model => model.SpolID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.TipDijabetesaID, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @*@Html.EditorFor(model => model.TipDijabetesaID, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.TipDijabetesaID, selectList: new SelectList(items: TipoviDijabetesa, dataValueField: "IDTipDijabetesa", dataTextField: "Naziv"), htmlAttributes: new { @class = "form-control dropdown" })
                    @Html.ValidationMessageFor(model => model.TipDijabetesaID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.RazinaFizickeAktivnostiID, htmlAttributes: new { @class = "control-label bold" })
                <div>
                    @*@Html.EditorFor(model => model.RazinaFizickeAktivnostiID, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.RazinaFizickeAktivnostiID, selectList: new SelectList(items: RazineFizickeAktivnosti, dataValueField: "IDRazinaFizickeAktivnosti", dataTextField: "Naziv"), htmlAttributes: new { @class = "form-control dropdown" })
                    @Html.ValidationMessageFor(model => model.RazinaFizickeAktivnostiID, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-danger button" />
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
